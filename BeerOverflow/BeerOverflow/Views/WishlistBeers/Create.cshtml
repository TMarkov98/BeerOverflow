@model BeerOverflow.Models.WishlistBeer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add To Wishlist</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div hidden class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BeerId" class="control-label"></label>
                <select asp-for="BeerId" class ="form-control" asp-items="ViewBag.BeerId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a  type="button" class="btn btn-danger"  asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
