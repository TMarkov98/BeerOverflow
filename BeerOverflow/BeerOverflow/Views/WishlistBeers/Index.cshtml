@model IEnumerable<BeerOverflow.Models.WishlistBeer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Wishlist</h1>

<p>
    <a type="button" class="btn btn-warning" asp-action="Create">Add To Wishlist</a>
</p>
@if (Model.FirstOrDefault() == null)
{
    <h4 class="text-danger">You have no Beers added to your Wishlist.</h4>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                </th>
                <th>
                    Beers
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td align="center">
                        <img src=@Html.DisplayFor(modelItem => item.Beer.ImgUrl) height=75>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Beer.Name)
                    </td>
                    <td class="btn btn-danger">
                        @Html.ActionLink("Remove from Wishlist", "Delete", new { userId = item.UserId, beerId = item.BeerId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
