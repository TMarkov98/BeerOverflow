@model BeerOverflow.Models.Beer

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Beer</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeId" class="control-label"></label>
                <select asp-for="TypeId" class ="form-control" asp-items="ViewBag.TypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BreweryId" class="control-label"></label>
                <select asp-for="BreweryId" class ="form-control" asp-items="ViewBag.BreweryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AlcoholByVolume" class="control-label"></label>
                <input asp-for="AlcoholByVolume" class="form-control" />
                <span asp-validation-for="AlcoholByVolume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a  type="button" class="btn btn-danger"  asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
