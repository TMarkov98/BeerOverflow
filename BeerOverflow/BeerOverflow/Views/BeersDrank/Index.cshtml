@model IEnumerable<BeerOverflow.Models.BeerDrank>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Beers Drank</h1>

<p>
    <a type="button" class="btn btn-warning" asp-action="Create">Add to Drank List</a>
</p>
@if (Model.FirstOrDefault() == null)
{
    <h4 class="text-danger">You have no Beers added to your Drank list.</h4>
}
else
{
<table class="table">
    <thead>
        <tr>
            <th />
            <th>
                Beers
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td align="center">
                    <img src=@Html.DisplayFor(modelItem => item.Beer.ImgUrl) height=75>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Beer.Name)
                </td>
                <td class="btn btn-danger">
                    @Html.ActionLink("Remove from Drank List", "Delete", new { userId = item.UserId, beerId = item.BeerId })
                </td>
            </tr>
        }
    </tbody>
</table>

}