@model IEnumerable<BeerOverflow.Models.BeerDrank>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Beers Drank</h1>

<p>
    <a asp-action="Create">Add to Drank List</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Beers
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Beer.Name)
            </td>
            <td>
                @Html.ActionLink("Remove from Drank List", "Delete", new { userId = item.UserId, beerId = item.BeerId })
            </td>
        </tr>
}
    </tbody>
</table>
