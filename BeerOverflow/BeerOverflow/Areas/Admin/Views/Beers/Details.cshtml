@model BeerOverflow.Models.Beer
@using BeerOverflow.Web;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Details for Beer @Html.DisplayFor(model => model.Name)</h4>
    @if (User.Identity.IsAuthenticated)
    {
        @if (Model.Likes.FirstOrDefault(l => l.BeerId == Model.Id && l.UserId == User.GetUserId()) == null)
        {
            <a asp-action="Like" class="btn btn-primary" asp-route-id="@Model.Id">Like</a>
        }
        else
        {
            <a asp-action="Like" class="btn btn-secondary" asp-route-id="@Model.Id">Like</a>
        }
    }
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brewery)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brewery.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeletedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeletedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModifiedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModifiedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsDeleted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AlcoholByVolume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AlcoholByVolume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Likes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Likes.Count)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-danger" asp-action="Index">Back to List</a>
</div>
<div>
    @if (User.Identity.IsAuthenticated)
    {
        <a class="btn btn-warning" asp-action="AddToWishlist" asp-route-id="@Model.Id">Add To Wishlist</a>
        <a class="btn btn-warning" asp-action="AddToBeersDrank" asp-route-id="@Model.Id">Add To Beers Drank</a>
    }
</div>